<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/pref_header_security">
        <ListPreference
            android:entries="@array/passwordTypeValues"
            android:entryValues="@array/passwordTypeKeys"
            android:key="defaultPasswordType"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/defaultPasswordTypeTitle" />

        <ListPreference
            android:entries="@array/pref_clipboardDuration_titles"
            android:entryValues="@array/pref_clipboardDuration_values"
            android:key="clipboardDuration"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/clipboardDurationTitle" />

        <ListPreference
            android:entries="@array/pref_autoLogoutDuration_titles"
            android:entryValues="@array/pref_autoLogoutDuration_values"
            android:key="autoLogoutDuration"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/autoLogoutDurationTitle" />

        <CheckBoxPreference
            android:key="saveUserName"
            android:title="@string/title_saveUsername" />

        <CheckBoxPreference
            android:key="hidePasswords"
            android:title="@string/hidePasswordsTitle"
            android:summary="@string/password_toggle_content_description"/>

        <CheckBoxPreference
            android:key="showCanary"
            android:title="@string/showPasswordCanaryTitle"
            android:summary="@string/showPasswordCanarySummary"/>

        <de.devland.masterpassword.ui.preferences.VerifyPasswordPreference
            android:key="verifyPassword"
            android:title="@string/verifyPasswordTitle"
            android:summaryOn="@string/verifyPasswordOn"
            android:summaryOff="@string/verifyPasswordOff"/>

        <de.devland.masterpassword.ui.preferences.UnlockFingerprintPreference
            android:key="fingerprintEnabled"
            android:title="@string/fingerprintEnabledTitle" />

        <de.devland.masterpassword.ui.preferences.InputStickPreference
            android:key="inputstick"
            android:title="@string/pref_header_inputstick" />
    </PreferenceCategory>
</PreferenceScreen>