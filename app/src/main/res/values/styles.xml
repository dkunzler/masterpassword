<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/primary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/primary_dark</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/accent</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.Dialog" parent="Theme.AppCompat.DayNight.Dialog">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/primary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/primary_dark</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/accent</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
    </style>


    <color name="primary">#37474f</color>
    <color name="primary_light">#b0bec5</color>
    <color name="primary_dark">#263238</color>

    <color name="accent">#259b24</color>
    <color name="accent_light">#72d572</color>
    <color name="accent_dark">#056f00</color>

    <color name="black">#000000</color>
    <color name="divider">#1e000000</color>
    <color name="text_hint">#42000000</color>
    <color name="text_secondary">#8a000000</color>
    <color name="icon">#8a000000</color>
    <color name="text">#de000000</color>

    <style name="ShowcaseLightTheme" parent="ShowcaseView">
        <item name="sv_backgroundColor">#ddffffff</item>
        <item name="sv_showcaseColor">@color/accent_light</item>
        <!--<item name="sv_tintButtonColor">false</item>-->
        <!--item name="sv_titleTextAppearance">@style/CustomTitle</item-->
    </style>


    <style name="TextAppearance.ShowcaseView.Title" parent="android:style/TextAppearance.Large">
        <!--<item name="android:textColor">#ff000000</item>-->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.ShowcaseView.Detail" parent="android:style/TextAppearance">
        <!--<item name="android:textColor">#ff000000</item>-->
    </style>

    <color name="card_list_background">#e5e5e5</color>
    <color name="drawer_background">@android:color/white</color>
    <color name="drawer_icon_tint">#343434</color>
    <color name="login_icon_tint">@color/primary</color>
    <color name="drawer_item_active">@color/primary_light</color>
    <color name="card_icon_tint">@android:color/black</color>

    <style name="FilePickerTheme" parent="NNF_BaseTheme.Light">
        <!-- Set these to match your theme -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>


        <!-- Need to set this also to style create folder dialog -->
        <item name="alertDialogTheme">@style/FilePickerAlertDialogTheme</item>

        <!-- If you want to set a specific toolbar theme, do it here -->
        <!-- <item name="nnf_toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item> -->
        <!-- Make sure toolbar title is white -->
        <item name="nnf_toolbarTheme">@style/FilePickerToolbarTheme</item>
    </style>

    <style name="FilePickerToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/primary_text_dark</item>
    </style>

    <style name="FilePickerAlertDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>
</resources>